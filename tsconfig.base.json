{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ecoaching-on-pi/ecoach/components": [
        "libs/ecoach/components/src/index.ts"
      ],
      "@ecoaching-on-pi/ecoach/data": [
        "libs/ecoach/data/src/index.ts"
      ],
      "@ecoaching-on-pi/ecoach/ui": [
        "libs/ecoach/ui/src/index.ts"
      ],
      "@ecoaching-on-pi/fitness/components": [
        "libs/fitness/components/src/index.ts"
      ],
      "@ecoaching-on-pi/fitness/data": [
        "libs/fitness/data/src/index.ts"
      ],
      "@ecoaching-on-pi/shared/data": [
        "libs/shared/data/src/index.ts"
      ],
      "@ecoaching-on-pi/shared/service": [
        "libs/shared/service/src/index.ts"
      ],
      "@ecoaching-on-pi/shared/ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@ecoaching-on-pi/shared/utility": [
        "libs/shared/utility/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
